# === Required for tests (local + CI) ===
ADA_TEST_PASSWORD=          # Password used by Playwright tests to login
ADA_TEST_EMAIL=             # Email for v2 multi-user login tests (optional, omit for legacy v1 login)

# === Required for local backend ===
JWT_SECRET=                 # Random hex string for JWT signing (generate: openssl rand -hex 32)
ADA_LOGIN_PASSWORD=         # Backend login password for legacy v1 auth (falls back to ADA_TEST_PASSWORD if unset)
FRONTEND_ORIGIN=http://localhost:4173   # CORS origin for backend

# === Multi-user auth (v2) ===
DATABASE_URL=               # PostgreSQL connection string (required for v2 multi-user login)

# === Optional ===
DEPLOY_URL=https://abupet.github.io/ada/index.html   # Only for test:deployed
STRICT_NETWORK=0
STRICT_ALLOW_HOSTS=
ALLOW_OPENAI=0
